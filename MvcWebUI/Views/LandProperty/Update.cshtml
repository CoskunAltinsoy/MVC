@model Entities.Concrete.LandProperty
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Güncelle</h1>
@using (Html.BeginForm("Update","LandProperty",FormMethod.Post))
{
   @Html.HiddenFor(m=>m.Id)
