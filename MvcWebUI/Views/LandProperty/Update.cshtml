        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m=>m.Price, new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Picture)
        @Html.TextBoxFor(m=>m.Picture, new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Video)
        @Html.TextBoxFor(m=>m.Video, new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ListingDate)
        @Html.TextBoxFor(m=>m.ListingDate, new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AdvertState)
        @Html.TextBoxFor(m=>m.AdvertState, new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AdvertNo)
        @Html.TextBoxFor(m=>m.AdvertNo, new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Square)
        @Html.TextBoxFor(m=>m.Square, new {@class="form-control"})
    </div>
     <div class="form-group">
        @Html.LabelFor(m => m.ExchangeStatus)
        @Html.TextBoxFor(m=>m.ExchangeStatus, new {@class="form-control"})
    </div>
     <div class="form-group">
        @Html.LabelFor(m => m.City)
        @Html.TextBoxFor(m=>m.City, new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.District)
