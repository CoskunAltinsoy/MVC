    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LandType)
        @Html.TextBoxFor(m=>m.LandType, new {@class="form-control"})
    </div>
   

    <br />
    <button type="submit" class="btn btn-success">Güncelle</button>

}

